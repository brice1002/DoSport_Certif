{% extends 'base.html.twig' %}

{% block title %}Contact - Do Sport
{% endblock %}

{% block content %}



	<h2 class="mt-5">Nous contacter</h2>

	<form method="POST">
		<div class="form-group">
			<label for="email" class="form-label mt-4">
				<strong>Email</strong>
			</label>
			<input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Entrer votre email">
			<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email avec quiconque.</small>
		</div>
		<div class="form-group">
			<label class="col-form-label mt-4" for="sujet">
				<strong>Sujet</strong>
			</label>
			<input type="text" class="form-control" placeholder="Votre sujet" name="sujet">
		</div>
		<div class="form-group">
			<label for="message" class="form-label mt-4">
				<strong>Message</strong>
			</label>
			<textarea class="form-control" name="message" rows="3" placeholder="Votre message"></textarea>
		</div>
		<input type="submit" class="btn btn-primary" value="Envoyer">
	</form>

{% endblock %}
